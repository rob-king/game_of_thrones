<h1>Houses#show</h1>
<p>Find me in app/views/houses/show.html.erb</p>

<h1><%= @house.name %></h1>

<%= link_to "Edit", edit_house_path %>
<%= link_to 'Delete House', @house,
               method: :delete,
               data: { confirm: 'Are you sure?' } %>

<% @characters.each do |character| %>
<p><%= link_to character.name, house_character_path(@house, character) %></p>
<% end %>

<%= link_to "Create Character", new_house_character_path(@house) %>
